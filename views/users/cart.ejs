<!DOCTYPE html>
<html>

<head>
    <%- include ('../partials/head2.ejs') %>
</head>

<body>
    <nav>
        <%- include ('../partials/nav.ejs') %>
    </nav>
    <div id="container">
        <h4><%= currentUser.username %>'s Shopping Cart</h4>
        <ul>
            <% for(const item of userCart){ %>
                <li><h5><%= item.name %></h5></li>
                <li><h5>$<%= item.price %></h5></li>
                <li><img class="cart-img" src="<%= item.img %>" /></li>
                <li><h5>count: <%= item.qty %> </h5></li>
            <br/>
                <button><li><a href="/products/<%= item.id %>/edit">Update</a></li></button>
            <br/>
            <!-- <li><form action="/users/cart/<%= item.id %>?_method=DELETE" method="POST">
                <input id="delete" type="submit" value="DELETE" />
              </form></li> -->
            <% } %> 
        </ul>
        <br/>
        <button><a id="home" href="/products">Home</a></button>
    </div>
</body>
</html>

